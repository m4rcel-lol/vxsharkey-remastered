<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/public/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <main>
    <div class="container">
      <div class="instance-header">
        <% if (meta.iconUrl) { %>
        <img src="<%= meta.iconUrl %>" alt="<%= meta.name || domain %>" class="instance-icon">
        <% } %>
        <div>
          <h1><%= meta.name || domain %></h1>
          <p class="instance-domain"><%= domain %></p>
          <% if (meta.description) { %>
          <p class="instance-description"><%= meta.description %></p>
          <% } %>
        </div>
      </div>

      <div class="timeline">
        <h2>Recent Public Notes</h2>
        <% if (notes && notes.length > 0) { %>
          <% notes.forEach(note => { %>
          <div class="timeline-note">
            <div class="timeline-note-header">
              <img src="<%= note.user.avatarUrl %>" alt="<%= note.user.username %>" class="timeline-avatar" onerror="this.style.display='none'">
              <div>
                <div class="timeline-username"><%= note.user.name || note.user.username %></div>
                <div class="timeline-handle">@<%= note.user.username %></div>
              </div>
            </div>
            <% if (note.text) { %>
            <div class="timeline-text">
              <%= note.text.substring(0, 200) %><% if (note.text.length > 200) { %>...<% } %>
            </div>
            <% } %>
            <% if (note.files && note.files.length > 0) { %>
            <div class="timeline-attachments">
              <% note.files.slice(0, 3).forEach(file => { %>
                <% if (file.type.startsWith('image')) { %>
                <img src="<%= file.thumbnailUrl || file.url %>" alt="" class="timeline-attachment-thumb">
                <% } %>
              <% }); %>
            </div>
            <% } %>
            <a href="/instance/<%= domain %>/notes/<%= note.id %>" class="timeline-link">View Note â†’</a>
          </div>
          <% }); %>
        <% } else { %>
          <p>No public notes available.</p>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
